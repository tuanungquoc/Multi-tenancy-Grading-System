<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/test.css">
    <script src="https://use.fontawesome.com/ed62a54d4b.js"></script>
    <% include ../views/common/css %>
</head>
<body>
<div class="container">

  <% include ../views/common/header %>
    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Tenants:</h3>
                <form action="/tenants" method = "POST">
                    <select name="tenant"  onchange="javascript: if(this.value != '0') this.form.submit(); else alert('hello');">
                      <option value='0'>Choosing a tenant</option>
                      <%
                          for(var i = 0 ; i < tenantList.length; i++){ %>
                              <option value="<%= tenantList[i].TENANT_ID %>" <% if (itemSelected == tenantList[i].TENANT_ID) { %> selected="true" <% } %>> <%= tenantList[i].TABLE_NAME %></option>
                          <%}%>
                    </select>


                  </form>

            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Grading Attributes:</h3>
                <table class="table table-inverse">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Type</th>
                      <th>Html Type</th>
                      <th>Selected</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th scope="row">1</th>
                      <td>Scale</td>
                      <td>0&nbsp;<input type="range" min="0" max="100" step="1">&nbsp;100</output></td>
                      <td><input type="checkbox" checked="true"></td>
                    </tr>
                    <tr>
                      <th scope="row">2</th>
                      <td>Point</td>
                      <td><input type="textbox"></td>
                      <td><input type="checkbox" checked="true"></td>
                    </tr>
                    <tr>
                      <th scope="row">3</th>
                      <td>Complete or Not Complete</td>
                      <td>
                        <label class="switch">
                          <input type="checkbox" checked>
                          <div class="slider round"></div>
                        </label>
                      </td>
                      <td><input type="checkbox" checked="true"></td>
                    </tr>
                    <tr>
                      <th scope="row">4</th>
                      <td>Comments</td>
                      <td><textarea placeholder="Your comments...." ></textarea></td>
                      <td><input type="checkbox" checked="true"></td>
                    </tr>
                  </tbody>
                </table>
            </div>

        </div>

    </div>
    <input type="submit" class="btn btn-success" value="Save">

</div>
</body>
</html>
